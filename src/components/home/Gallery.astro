---
import { getHomeGallery } from "@/helpers/rajaKertas";
import CarouselComponent from "../react/Carousel";

const response = await getHomeGallery()
const {pathname} = Astro.url
---

<section class="text-white p-10 bg-brownkertas">

    <div class="space-y-6 pl-6">
        <h1 class="text-4xl font-bold">Galeri Gambar</h1>
        <p>Lihat berbagai penggunaan kertas dalam industri yang berbeda.</p>
    </div>
  
    <CarouselComponent client:load gallery={response.results} produk={[]} type="gallery" pathname={pathname} />
</section>