---
import { getFooter } from "@/helpers/rajaKertas"
import { Image } from "astro:assets";


const response = await getFooter()
---

<footer class="px-10 pt-4 text-white bg-brownkertas">
  
    <div class="grid md:grid-cols-3 space-y-10 md:space-x-6 justify-evenly">
        <div class="flex flex-col space-y-6">
            <span>
              <Image
                class="aspect-auto"
                src={response.app_config_image}
                width={150}
                height={100}
                alt={"RajaKertas"}
            
              />
            </span>

            <span>
              <h2>Alamat:</h2>
              <p>{response.value.alamat}</p>
            </span>

            <span class="text-white" >
              <h2>Kontak:</h2>
              <span class="flex space-x-2">
                <Image src={'/images/whatsappwhite.svg'} alt={"whatsapp"} width={20} height={20}/>
                <p>
                   {response.value.nomor} (Whatsapp)
                </p>
              </span>
            
            </span>

