---
import Whatsapp from '@/components/Whatsapp.astro';
import Toastify from '@/components/Toastify';
import '@/styles/globals.css'


import Seo from '@/components/Seo.astro'
import Navbar from '@/components/Navbar.astro';
interface Props {
	title: string;
	description?:string;
	image?:string
}
const { title, description ="Kami adalah perusahaan yang menyediakan dan mendistribusikan kertas secara online. Dapatkan berbagai jenis kertas berkualitas dari kami", image="./images/band.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<script is:inline type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-31XQGP06B2"></script>
		<script is:inline type="text/partytown">
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config', 'G-31XQGP06B2');
		</script>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" sizes="32x32" type="image/x-icon"/>
		<link   rel="preload"
		href="/fonts/poppins-v21-latin-regular.woff2"
		as="font"
		type="font/woff2"
		crossorigin/>
		<link rel="sitemap" href="/sitemap.xml" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image}/>
		<title>{title}</title>

		<Seo  {title}
		{description}
		url = {Astro.url}
		{image}
		/>
	</head>
	<body class="min-h-screen">
		<Toastify client:load/>
		<Navbar/>
		<Whatsapp/>
		<slot />
	</body>
</html>

